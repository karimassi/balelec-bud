<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/welcome_page_margin"
        android:layout_marginRight="@dimen/welcome_page_margin"
        android:layout_marginTop="@dimen/rv_item_top_bottom_margin"
        android:layout_marginBottom="@dimen/rv_item_top_bottom_margin"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/welcome_view_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/welcome_page_image_height"
            android:layout_marginTop="@dimen/welcome_page_image_margin"
            android:layout_marginBottom="@dimen/welcome_page_image_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_page_title_margin"
            android:layout_marginStart="@dimen/welcome_page_title_margin"
            android:layout_marginEnd="@dimen/welcome_page_title_margin"
            android:background="@drawable/round_corner_background"
            android:orientation="vertical"
            android:paddingLeft="@dimen/rv_item_side_padding"
            android:paddingTop="@dimen/rv_item_top_bottom_padding"
            android:paddingRight="@dimen/rv_item_side_padding"
            android:paddingBottom="@dimen/rv_item_top_bottom_padding">

            <TextView
                android:id="@+id/welcome_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rv_item_subtitle"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/rv_item_top_bottom_padding"
                android:layout_marginBottom="@dimen/rv_item_top_bottom_padding"
                android:background="@color/secondaryColor" />


            <TextView
                android:id="@+id/welcome_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rv_item_text"
                android:fontFamily="@font/proxima_nova_bold"
                android:lineSpacingExtra="@dimen/welcome_page_text_spacing"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>