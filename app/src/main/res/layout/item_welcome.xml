<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/welcome_page_margin"
        android:layout_marginEnd="@dimen/welcome_page_margin"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/welcome_view_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/welcome_page_image_height"
            android:layout_marginTop="@dimen/welcome_page_image_margin"
            android:layout_marginBottom="@dimen/welcome_page_image_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_page_title_margin"
            android:layout_marginBottom="@dimen/welcome_page_title_margin"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_view_image" />

        <TextView
            android:id="@+id/welcome_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_page_description_margin"
            android:background="@drawable/round_corner_background"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/design_default_color_background"
            android:fontFamily="@font/proxima_nova_bold"
            android:lineSpacingExtra="@dimen/welcome_page_text_spacing"
            android:paddingStart="@dimen/welcome_page_description_padding"
            android:paddingTop="@dimen/welcome_page_description_padding"
            android:paddingBottom="@dimen/welcome_page_description_padding"
            android:paddingEnd="@dimen/welcome_page_description_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_view_title" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>