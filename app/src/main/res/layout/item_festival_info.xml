<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/rv_item_side_margin"
    android:layout_marginTop="@dimen/festival_info_item_top_bottom_margin"
    android:layout_marginRight="@dimen/rv_item_side_margin"
    android:layout_marginBottom="@dimen/festival_info_item_top_bottom_margin"
    android:background="@drawable/round_corner_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/rv_item_side_padding"
    android:paddingTop="@dimen/rv_item_top_bottom_padding"
    android:paddingRight="@dimen/rv_item_side_padding"
    android:paddingBottom="@dimen/rv_item_top_bottom_padding">

    <TextView
        android:id="@+id/festivalInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/old_sans_black"
        android:textColor="@android:color/white"
        android:textSize="@dimen/festival_information_title_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/festivalInfoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/old_sans_black"
        android:textColor="@android:color/white" />

</LinearLayout>