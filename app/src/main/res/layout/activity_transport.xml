<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/transport_activity_drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
android:background="@color/blek_blue"
tools:openDrawer="start"
tools:context="ch.epfl.balelecbud.TransportActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/transport_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blek_blue"
        app:theme="@style/ToolBarStyle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragmentTransportList"
            android:name="ch.epfl.balelecbud.transport.TransportListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="159dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

<com.google.android.material.navigation.NavigationView
    android:id="@+id/transport_activity_nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    android:background="@color/blek_blue"
    app:headerLayout="@layout/root_activity_nav_header"
    app:itemTextAppearance="@style/blek_font_style"
    app:menu="@menu/root_activity_menu_header"
    app:itemIconTint="@color/blek_orange" />
</androidx.drawerlayout.widget.DrawerLayout>