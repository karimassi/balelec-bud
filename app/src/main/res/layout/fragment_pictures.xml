<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_transport_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PicturesFragment"
    android:gravity="center"
    android:background="@android:color/black">

    <Button
        android:id="@+id/takePicBtn"
        android:layout_width="0dp"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rv_item_side_margin"
        android:layout_marginRight="@dimen/rv_item_side_margin"
        android:layout_weight="1"
        android:text="Take a pic"/>

</LinearLayout>


